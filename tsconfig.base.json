{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@boilerplate/application": ["libs/shared/application/src/index.ts"],
      "@boilerplate/auth": ["libs/shared/auth/src/index.ts"],
      "@boilerplate/domain": ["libs/shared/domain/src/index.ts"],
      "@boilerplate/http": ["libs/shared/http/src/index.ts"],
      "@boilerplate/infra": ["libs/shared/infra/src/index.ts"],
      "@boilerplate/messages-application": [
        "libs/messages/messages-application/src/index.ts"
      ],
      "@boilerplate/messages-domain": [
        "libs/messages/messages-domain/src/index.ts"
      ],
      "@boilerplate/messages-infra": [
        "libs/messages/messages-infra/src/index.ts"
      ]
    }
  }
}
